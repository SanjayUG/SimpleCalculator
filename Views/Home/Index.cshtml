@model SimpleCalculator.Models.Calculator

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form asp-action="Index">
        <label>Enter first number:</label>
        <input type="number" asp-for="num1"/>
        <br /><br />
        <label>Enter second number:</label>
        <input type="number" asp-for="num2" />
        <br /><br />
        <label>Select a Operation:</label>
        <br />
        <input type="submit" value="+" asp-for="calculate"/>
        <input type="submit" value="-" asp-for="calculate" />
        <input type="submit" value="*" asp-for="calculate" />
        <input type="submit" value="/" asp-for="calculate" />
        <input type="submit" value="^" asp-for="calculate" />
        <br /><br />
        <hr />
        <label>Result :</label>
        <input type="number" asp-for="@ViewData["result"]"/>
    </form>    
</div>
